{
  "type": "module",
  "name": "excel-project-batch-splitter",
  "productName": "ExcelSlitter",
  "author": "clssck",
  "version": "1.1.0",
  "description": "Electron app to split Excel files by project_code and batch_code with GUI file/directory selection.",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist out",
    "build:win": "electron-builder --windows",
    "build:mac": "electron-builder --mac",
    "dist:win": "(taskkill /IM ExcelProjectBatchSplitter.exe /F >nul 2>&1 & taskkill /IM electron.exe /F >nul 2>&1 & taskkill /IM node.exe /F >nul 2>&1 & timeout /t 2 /nobreak >nul) || exit 0 && npm run clean && npm run build:win",
    "dist:mac": "(pkill -f ExcelProjectBatchSplitter || true; pkill -f electron || true; sleep 2) && npm run clean && npm run build:mac",
    "postdist:mac": "xattr -cr dist/mac-arm64/ExcelProjectBatchSplitter.app || echo 'Failed to run xattr. Run manually if needed: xattr -cr dist/mac-arm64/ExcelProjectBatchSplitter.app'",
    "run:mac": "npm run dist:mac",
    "run:win": "npm run dist:win",
    "postinstall": "electron-builder install-app-deps",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "check-updates": "npm outdated",
    "lint": "npx eslint . --ext .js"
  },
  "dependencies": {
    "xlsx": "https://cdn.sheetjs.com/xlsx-0.20.3/xlsx-0.20.3.tgz",
    "exceljs": "^4.4.0",
    "trash": "^9.0.0"
  },
  "devDependencies": {
    "electron": "^35.2.1",
    "electron-builder": "26.0.12",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "rimraf": "^6.0.1",
    "jest": "^29.7.0",
    "eslint": "^9.25.1",
    "globals": "^16.0.0"
  },
  "build": {
    "appId": "com.example.excelprojectbatchsplitter",
    "productName": "ExcelProjectBatchSplitter",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/splitter_sprite.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.utilities"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "build/splitter_sprite.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}",
      "include": "installer.nsh"
    },
    "publish": null
  },
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
